{
    "env": {
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "$": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "eqeqeq": [
            "error", 
            "smart"
        ],
        "curly": [
            "error",
            "all"
        ],
        "no-unused-vars": "error",
        "brace-style": [
            "error", 
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "indent": [
            "error",
            4,
            { 
                "SwitchCase": 1
            }
        ],
        "comma-dangle": [
            "error", 
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline",
                "functions": "never"
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-lonely-if": "error",
        "no-trailing-spaces": "error",
        "no-unneeded-ternary": "error",
        "space-before-function-paren": [
            "error", 
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    }
}